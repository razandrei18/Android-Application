<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CazareEditActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backgroud_login">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pentru a introduce o noua unitate de cazare, completați spațiile de mai jos:"
            android:textSize="20dp"
            android:textColor="#FFFF"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_cazareName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Numele pensiunii/hotelului"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"/>
        <EditText
            android:id="@+id/edit_cazareDetalii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrierea unitatii (numar de camere, preturi, etc.)"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:background="#FFFFFF"
            android:padding="4dp"/>

        <EditText
            android:id="@+id/edit_cazareInfoContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adaugati informatiile de contact"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:background="#FFFFFF"
            android:padding="10dp"/>

        <Button
            android:id="@+id/edit_ButonTrimitereCazare"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Inserare"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFF"/>

    </LinearLayout>
</RelativeLayout>