<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="88dp"
        android:paddingLeft="6dp"
        android:paddingTop="26dp"
        app:srcCompat="@drawable/razvi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times new roman"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:text="Prezentarea orașului"
        android:textColor="@color/titleColor"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times new roman"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:text="Gura Humorului"
        android:textColor="@color/titleColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/link_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="times new roman"
        android:paddingLeft="2dp"
        android:paddingTop="6dp"
        android:text="Site-ul primăriei: www.primariagh.ro"
        android:textColor="@color/titleColor"
        android:textColorLink="@color/titleColor"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times new roman"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:text="Meniu Principal:"
        android:textColor="@color/titleColor"
        android:textSize="16sp" />


</LinearLayout>