<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atractii.mytown.aventuraParc.mytown.ProgramAventura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DFF7DEA9"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DFF7DEA9"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="Orar Funcționare"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DFF7DEA9"
            android:text="CASA SE ÎNCHIDE CU DOUĂ ORE ÎNAINTE DE TERMINAREA PROGRAMULUI."
            android:textAlignment="center"
            android:textColor="#D32F2F"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DFF7DEA9"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/program1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="296dp"
                    android:src="@drawable/program2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingRight="4dp"
                    android:text="@string/orar_aventura"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</FrameLayout>