<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroud_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/adamina"
            android:text="Sunteți în modul Administrator"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:fontFamily="@font/belgrano"
            android:text="@string/adminText"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="24dp" />

        <Button
            android:id="@+id/editare_cazareBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:text="Editare Cazare"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/editare_eventsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:text="Editare Evenimente Locale"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/editare_restauranteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:text="Editare Restaurante"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/editare_logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:text="Ieșire din modul Administrator"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>