<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestauranteFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="@drawable/background_atractiii"
        android:text="Mai jos puteți găsi o listă cu restaurantele/localurile din orașul Gura Humorului:"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="times new roman"
        android:paddingTop="18dp"
        android:paddingLeft="4dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_restaurante"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_atractiii"
            android:paddingTop="8dp"/>
    </ScrollView>
</LinearLayout>