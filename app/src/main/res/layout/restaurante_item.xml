<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/background_atractiii"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="2dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#E6B83C37">

        <ImageView
            android:id="@+id/item_imgRest"
            android:layout_marginTop="18dp"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_denumireRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Denumire"
                android:textAlignment="viewStart"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_descriereRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Descriere"
                android:textAlignment="viewStart"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>