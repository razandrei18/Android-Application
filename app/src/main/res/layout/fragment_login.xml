<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/backgroud_login"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/razvi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"

            android:fontFamily="@font/adamina"
            android:text="Autentificare"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textIsSelectable="false"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/edittext_username"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:padding="6dp"
            android:background="@drawable/custom_field"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:hint="Adresa de email"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:padding="6dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_field"
            android:drawableLeft="@drawable/ic_password_filed"
            android:hint="Parolă"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@color/colorPrimary"
            android:text="Logare"
            android:textAlignment="center"
            android:textColor="#FFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Nu v-ați înregistrat încă?"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textview_inregistrare"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="4dp"
                android:text="înregistrați-vă!"
                android:textColor="@color/colorPrimary"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/resetPassword_id"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Ai uitat parola?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>