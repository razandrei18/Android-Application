<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atractii.mytown.piscina.mytown.PiscinaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_background"
            android:fontFamily="times new roman"
            android:padding="4dp"
            android:text="Piscina Ariniș"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/piscina_viewPager"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/title_background"
            android:text="Mai multe imagini ➮"
            android:textAlignment="viewEnd"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_background"
            android:fontFamily="times new roman"
            android:padding="6dp"
            android:text="Contact Ariniș"
            android:textAlignment="center"
            android:textColor="@color/titleColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="-8dp"
                    android:paddingLeft="6dp"
                    android:text="@string/piscina_arinis"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:layout_marginTop="-28dp"
                    android:layout_marginBottom="-20dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/tarife_piscina_acoperita" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</FrameLayout>