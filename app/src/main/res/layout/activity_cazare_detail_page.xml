<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CazareDetailPage"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/cazarePage_titlu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:text="Titlu"
        android:background="@drawable/title_background"
        android:textStyle="bold"
        android:fontFamily="times new roman"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/cazarePage_imagine"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/cazarePage_rezervareBtn"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="TRIMITE REZERVARE"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="#FFF"
        android:layout_marginTop="6dp"
        android:background="@drawable/custom_button"
        android:textStyle="bold"
        android:padding="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Descriere"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:textAlignment="center"
            android:textSize="24dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"/>

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/cazarePage_descriere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:text="Descriere"
        android:textColor="#FFF"
        android:fontFamily="times new roman"
        android:padding="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Detalii de contact:"
            android:fontFamily="times new roman"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/cazarePage_email_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:text="Email"
            android:textColor="#FFF"
            android:fontFamily="times new roman"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cazarePage_detaliiContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:text="Detalii Contact"
            android:textColor="#FFF"
            android:fontFamily="times new roman"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textSize="20dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>