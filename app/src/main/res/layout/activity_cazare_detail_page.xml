<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".CazareDetailPage">

    <TextView
        android:id="@+id/cazarePage_titlu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/title_background"
        android:fontFamily="times new roman"
        android:text="Titlu"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cazarePage_imagine"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/cazarePage_rezervareBtn"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:text="TRIMITE REZERVARE"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:fontFamily="times new roman"
                android:padding="4dp"
                android:text="Descriere"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="24dp"
                android:textStyle="bold" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/cazarePage_descriere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="times new roman"
                android:padding="4dp"
                android:text="Descriere"
                android:textColor="#FFF"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="times new roman"
                android:padding="4dp"
                android:text="Detalii de contact:"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cazarePage_email_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="times new roman"
                android:padding="4dp"
                android:text="Email"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cazarePage_detaliiContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="times new roman"
                android:padding="4dp"
                android:text="Detalii Contact"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>