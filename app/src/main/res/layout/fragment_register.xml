<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/backgroud_login"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/razvi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/adamina"
            android:text="Creare cont nou"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textIsSelectable="false"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/edittext_fullName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_field"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:padding="6dp"
            android:hint="Nume si Prenume"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edittext_mail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:padding="6dp"
            android:background="@drawable/custom_field"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="Adresa de email"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edittext_newPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:padding="6dp"
            android:background="@drawable/custom_field"
            android:drawableLeft="@drawable/ic_password_filed"
            android:hint="Alegeți o parolă"
            android:inputType="textPassword"
            android:textAlignment="center" />


        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:background="@color/colorPrimary"
            android:text="Inregistrare"
            android:textAlignment="center"
            android:textColor="#FFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:text="Sunteți deja înregistrat?"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textview_logare"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="4dp"
                android:text="Logați-vă!"
                android:textColor="@color/colorPrimary"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>

</FrameLayout>